{
	"compilerOptions": {
		"target": "es6", // Changed to es6 or esnext
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "commonjs", // Try changing to commonjs for Quokka
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react" // Change to react if react-jsx isn't working
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
